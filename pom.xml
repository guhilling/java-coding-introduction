<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.hilling.intro-to-coding</groupId>
    <artifactId>samples</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <url>https://github.com/guhilling/java-coding-introduction</url>
    <inceptionYear>2025</inceptionYear>

    <name>Introduction to Coding/Code Samples</name>

    <modules>
        <module>2025-11-14-intro</module>
        <module>2025-11-21-control_structures</module>
        <module>2025-11-28-classes</module>
        <module>2025-12-05-oop</module>
        <module>2025-12-12-encapsulation</module>
        <module>2026-01-09-TestDrivenDevelopment</module>
        <module>2026-01-09-Tasks</module>
        <module>2026-01-16-CommonPropertiesOfAnObject</module>
        <module>2026-01-23-Private_Constructors</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>21</java.version>
    </properties>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.14.1</version>
                <configuration>
                    <release>${java.version}</release>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.3.1</version>
            </plugin>
        </plugins>
    </build>

</project>